{
  "name": "superfluid-eligibility-api",
  "version": "1.0.0",
  "description": "A stateless backend service to check eligibility for Superfluid tokens",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon --exec ts-node src/app.ts",
    "build": "npm run build:client && tsc",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "build:client": "cd src/client && pnpm install && pnpm run build",
    "postinstall": "npm run build",
    "pnpm-build": "pnpm install && cd src/client && pnpm install && pnpm run build"
  },
  "keywords": [
    "superfluid",
    "eligibility",
    "api",
    "blockchain",
    "stack"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@slack/webhook": "^7.0.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.10",
    "@types/supertest": "^6.0.2",
    "axios": "^1.8.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "viem": "^2.23.11",
    "winston": "^3.17.0"
  }
}
